<?xml version="1.0" encoding="utf-8"?>
	<LinearLayout 
	    android:id="@+id/map_content"
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:background="@drawable/map_background_l1" >
  
	    <RelativeLayout
	        android:id="@+id/map_area"
	        android:orientation="vertical"
	        android:layout_width="wrap_content"
	        android:layout_height="0dp"
	      	android:layout_weight="2" >

			<Button
			    android:id="@+id/button_l1"
			    android:layout_width="100dp"
			    android:layout_height="80dp"
			    android:layout_marginTop="280dp"
			    android:layout_marginLeft="200dp"
			    android:alpha="0"
			    android:onClick="changeBuilding" />

			<Button
			    android:id="@+id/button_l2"
			    android:layout_width="80dp"
			    android:layout_height="130dp"
			    android:layout_marginTop="100dp"
			    android:layout_marginLeft="240dp"
				android:alpha="0"
			    android:onClick="changeBuilding" />
			
			<Button
			    android:id="@+id/button_l3"
			    android:layout_width="150dp"
			    android:layout_height="130dp"
			    android:layout_marginTop="30dp"
			    android:layout_marginLeft="65dp"
			    android:alpha="0"
			    android:onClick="changeBuilding" />
			
			<Button
			    android:id="@+id/button_l4"
			    android:layout_width="130dp"
			    android:layout_height="140dp"
			    android:layout_marginTop="180dp"
			    android:layout_marginLeft="35dp"
			    android:alpha="0"
			    android:onClick="changeBuilding" />
		
			</RelativeLayout>
	    
	        <LinearLayout
	            android:id="@+id/tab_bar"
	            android:orientation="horizontal"
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="0.25"
	            android:padding="0dp"
	            android:background="@drawable/tab_bar" >
			

	            <ImageButton
	                android:id="@+id/tab_1"
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="1"
	                android:layout_margin="0dp"
	                android:padding="0dp"
	                android:background="@android:color/transparent"
	                android:src="@drawable/icon_fire"
	                android:onClick="changeTab" />
	            
	            <View 
				    android:layout_width="1dp"
				    android:layout_height="match_parent"
				    android:layout_marginTop="6dp"
				    android:layout_marginBottom="6dp"
   					android:background="#444444" />
	            
	            <ImageButton
	                android:id="@+id/tab_2"
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="1"
	                android:layout_margin="0dp"
	                android:padding="0dp"
	                android:background="@android:color/transparent"
	                android:src="@drawable/icon_biology"
	                android:onClick="changeTab" />
	            
	            <View 
				    android:layout_width="1dp"
				    android:layout_height="match_parent"
				    android:layout_marginTop="6dp"
				    android:layout_marginBottom="6dp"
   					android:background="#444444"/>

	            <ImageButton
	                android:id="@+id/tab_3"
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="1"
	                android:layout_margin="0dp"
	                android:padding="0dp"
	                android:background="@android:color/transparent"
	                android:src="@drawable/icon_physics"
	                android:onClick="changeTab" />
	            
	            <View 
				    android:layout_width="1dp"
				    android:layout_height="match_parent"
				    android:layout_marginTop="6dp"
				    android:layout_marginBottom="6dp"
   					android:background="#444444" />

	            <ImageButton
	                android:id="@+id/tab_4"
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="1"
	                android:layout_margin="0dp"
	                android:padding="0dp"
	                android:background="@android:color/transparent"
	                android:src="@drawable/icon_chemistry"
	                android:onClick="changeTab" />
	            
	        </LinearLayout>

	     	<TextView
                android:id="@+id/tab_content"
                android:layout_width="match_parent"
            	android:layout_height="0dp"
            	android:layout_weight="0.8"
            	android:padding="20dp"
            	android:background="#cc000000"
                android:textColor="#ffffff"
                android:textSize="9pt"
                android:textIsSelectable="false" />
	 
	</LinearLayout>