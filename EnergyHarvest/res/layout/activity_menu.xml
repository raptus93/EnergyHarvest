<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1"
    android:gravity="center"
    android:background="@drawable/menu_background" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:contentDescription="@string/logodescription"
        android:src="@drawable/logo" />
    
    <Button
        android:id="@+id/btnImageTracking"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:onClick="arImageDemo"
        android:text="@string/placeholder_image_tracking" />
    
    <Button
        android:id="@+id/btn3dMapTracking"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="arMapDemo"
        android:text="@string/placeholder_3d_map_tracking" />
    
    <Button
        android:id="@+id/btnQuiz"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="goToQuiz"
        android:text="@string/placeholder_quiz" />
    
    <Button
        android:id="@+id/btnMap"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="goToMap"
        android:text="@string/map" />

    <Button
        android:id="@+id/btnClan"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="goToClan"
        android:text="@string/clan" />

    <Button
        android:id="@+id/btnProfile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="goToProfile"
        android:text="@string/profile" />

    <Button
        android:id="@+id/btnTutorial"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="goToTutorial"
        android:text="@string/tutorial" />

</LinearLayout>
